<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Events_live" parent="Theme.Design.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_dark</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_dark</item>
        <item name="colorSecondaryVariant">@color/grey_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green_dark</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="LoadingDialogDefault" parent="android:Theme.DeviceDefault.Light.Dialog" />

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>

        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/green_dark</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green_dark</item>

    </style>
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
        <!--        <item name="android:windowBackground">@drawable/splash_theme</item>-->
        <item name="colorPrimary">@color/green_dark</item>
        <item name="android:statusBarColor">@color/green_dark</item>
    </style>
</resources>